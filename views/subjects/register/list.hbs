{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert"></button>
    {{this}}
</div>
{{/each}}
<div class="page-header">
    <h1>Felvett tárgyak</h1>
</div>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Kurzuskód</th>
            <th>Név</th>
            <th>Típus</th>
            <th>Kredit</th>
            <th>Időpont</th>
            <th>Helyszín</th>
            <th>Oktató</th>
        </tr>   
    </thead>
    <tbody>
        {{#each subjects}}
        <tr>
            <td>{{code}}</td>
            <td>{{name}}</td>
            <td>{{type}}</td>
            <td>{{credit}}</td>
            <td>{{date}}</td>
            <td>{{location}}</td>
            <td>{{teacher}}</td>
            <td>
                <a class="btn btn-default btn-sm megtekintes-gomb" href="/subjects/register/{{id}}" role="button">Megtekintés</a>
                <a class="btn btn-default btn-sm torles-gomb" href="/subjects/delete/{{id}}" role="button">Leadás</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<!--<p><a href="/subjects/new" class="btn btn-default">Új tárgy hozzáadása</a></p>-->
</body>
