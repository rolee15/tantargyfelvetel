{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert"></button>
    {{this}}
</div>
{{/each}}
<div class="page-header">
    <h1>Felvett tárgyak</h1>
</div>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Helyszín</th>
            <th>Leírás</th>
            <th>Műveletek</th>
        </tr>   
    </thead>
    <tbody>
        {{#each subjects}}
        <tr>
            <td>{{date}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{location}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td>
                <a class="btn btn-default btn-sm megtekintes-gomb" href="/subjects/list/{{id}}" role="button">Megtekintés</a>
                <a class="btn btn-default btn-sm torles-gomb" href="/subjects/delete/{{id}}" role="button">Törlés</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<p><a href="/subjects/new" class="btn btn-default">Új tárgy hozzáadása</a></p>
</body>
