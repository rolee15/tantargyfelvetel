{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert"></button>
    {{this}}
</div>
{{/each}}
<div class="page-header">
    <h1>{{subject.name}}</h1>
</div>
<table class="table table-striped table-hover ">
    <tbody>
        <tr>
            <td>Név</td>
            <td>{{subject.name}}</td>
        </tr>
        <tr>
            <td>Dátum</td>
            <td>{{subject.date}}</td>
        </tr>
        <tr>
            <td>Státusz</td>
            <td>{{subject.statusText}}</td>
        </tr>
        <tr>
            <td>Helyszín</td>
            <td>{{subject.location}}</td>
        </tr>
        <tr>
            <td>Leírás</td>
            <td>{{subject.description}}</td>
        </tr>
    </tbody>
</table>
<p>
    <a class="btn btn-default btn-sm" href="/subjects/new" role="button">Új tárgy hozzáadása</a>
    <a class="btn btn-default btn-sm torles-gomb" href="/subjects/delete/{{id}}" role="button">Törlés</a>
</p>
</body>
